<!--IMPORTANTAO O HEADER MUSTACHE -->
{{>partials/header}}
{{#banner}}
<section class="banner" style="background-image: url('images/{{background}}')">{{ title }}</section>
<h2>{{ title }} disponíveis para adoção</h2>
{{/banner}}

<div class="container list">

<!-- fazendo loop com mustashe -->
{{#list}}
    <div class="item">
        <img src="images/{{ image }}" class="item--image" />
        <div class="item--name">Nome: {{ name }}</div>
        <div class="item--color">Cor: {{ color }}</div>
        <div class="item--genre">Genero: {{ sex }}</div>
    </div>
{{/list}}
</div>

<!-- fazendo codicao com mustashe -->
 {{^list}}
    <div class="container no-list">
        <h2>Nao ha animais disponíveis nestas codicoes.</h2>
    </div>
 {{/list}}
{{>partials/footer}}
